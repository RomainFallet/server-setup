{
  "name": "server-setup",
  "version": "1.0.0",
  "repository": "git@github.com:RomainFallet/server-setup.git",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "~15.0.0",
    "@commitlint/config-conventional": "~15.0.0",
    "husky": "~7.0.4",
    "lint-staged": "~12.1.2",
    "markdownlint": "~0.24.0",
    "markdownlint-cli": "~0.30.0",
    "npm-check-updates": "~12.0.2",
    "npm-run-all": "~4.1.5",
    "shellcheck": "~1.0.0"
  },
  "scripts": {
    "lint": "npm-run-all lint:*",
    "format": "npm-run-all format:*",
    "lint:sh": "shellcheck./*.sh",
    "lint:md": "markdownlint ./*.md --ignore ./node_modules",
    "format:md": "markdownlint --fix ./*.md --ignore ./node_modules",
    "dep-upgrade:patch": "ncu -i -u --target patch",
    "dep-upgrade:minor": "ncu -i -u --target minor",
    "dep-upgrade:latest": "ncu -i -u --target latest"
  },
  "lint-staged": {
    "./*.sh": [
      "shellcheck"
    ],
    "./*.md": [
      "markdownlint --ignore ./node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
}
